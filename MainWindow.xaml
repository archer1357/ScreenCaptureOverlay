<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        
        Loaded="Window_Loaded"
        Width="640"
        Height="480"        
        Title="Screen Capture Display"        
        WindowState="Maximized"
        Topmost="True"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"       
        >

    <Border BorderBrush="#FF0EA73B" BorderThickness="20" >
        <Grid x:Name="MainControl">
            <Label Content="Press 1 to capture, 2 to clear, +/- to change opacity." Foreground="#FF0090FF" FontSize="20" FontWeight="Bold" />
            <Image Grid.Row="0" x:Name="ImageControl" Grid.RowSpan="1" />
        </Grid>
    </Border>

</Window>
